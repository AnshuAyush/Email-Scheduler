<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sendemailandschedular">


    <TextView
        android:id="@+id/bold_upper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCHEDULE"
        android:textSize="30dp"
        android:paddingTop="25dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:shadowColor="#EF0202"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:layout_marginTop="10dp"


         />



    <EditText
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="To:"
        android:background="@drawable/costuminput"
        android:padding="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/cc"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="CC:"
        android:background="@drawable/costuminput"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/subject"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="Subject:"
        android:background="@drawable/costuminput"
        android:padding="20dp"

        />
    <TextView
        android:id="@+id/body_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="BODY:"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:padding="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/body"
        android:layout_marginTop="360dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:textSize="20dp"
        android:background="@drawable/costuminput"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="250dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="20dp"

        >
        <TextView
            android:id="@+id/scheduler_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULER"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
        <RadioButton
            android:id="@+id/recurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Recurring"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Weekly"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/Monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Monthly"
            android:textStyle="bold"

            />
        <RadioButton
            android:id="@+id/Yearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Yearly"
            android:textStyle="bold"
            />

    </RadioGroup>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="SCHEDULE"
        android:textStyle="bold"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="230dp"
        />

    <EditText
        android:id="@+id/your_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="YOUR MAIL"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/costuminput"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/your_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/costuminput"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/done"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:visibility="gone"
        />



</RelativeLayout>