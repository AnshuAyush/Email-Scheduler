<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"

    >



    <androidx.cardview.widget.CardView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="240dp"
        android:layout_marginBottom="630dp"
        app:cardCornerRadius="200dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="30dp"

        >

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:padding="20dp"
            android:scaleY="1.5"
            android:scaleX="1.5"

            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/compose_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="480dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="170dp"
        app:cardCornerRadius="200dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMPOSE EMAIL"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:textColor="#070BE4"
           />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/plus"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginRight="130dp"
            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/moreaboutus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop="580dp"
        app:cardCornerRadius="200dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/info"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginRight="110dp"

            />
        <TextView
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:text="MORE ABOUT US"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#070BE4"

            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="230dp"
        android:layout_marginTop="660dp"
        app:cardCornerRadius="200dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_history"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="HISTORY"
            android:textColor="#070BE4"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="42dp"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/flying_mail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/flying_mail"
        android:layout_marginBottom="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />


</RelativeLayout>